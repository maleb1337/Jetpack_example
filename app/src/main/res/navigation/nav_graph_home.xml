<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_home"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="cl.maleb.jetpackexample.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <argument
            android:name="homeViewData"
            android:defaultValue="@null"
            app:argType="cl.maleb.jetpackexample.ui.home.HomeViewData"
            app:nullable="true" />
        <deepLink
            app:action="@+id/action_homeFragment_self"
            app:uri="myapp://home/{homeViewData}" />
    </fragment>

    <action
        android:id="@+id/action_homeFragment_self"
        app:destination="@id/homeFragment" />

</navigation>